<div class="center container m-5 p-3 mb-5 bg-white rounded p-5">
    <% if @project.errors.any? %>
        <div id="Error_explanation" class="text-center">
            <h2><i class="fas fa-exclamation-triangle text-warning"></i>
                <%= pluralize(@project.errors.count, "error" )%>
                este proyecto no puede ser guardado:
            </h2>
            <ul>
                <% @project.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% else %>
        <h1 class="text-center">Proyecto creado<i class="text-success"></i></h1>
    <% end %>
</div>